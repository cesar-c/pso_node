<div class="col-md-4 mx-auto">
    <div class="card text-center">
        <div class="card-header">
            <h3>New Note</h3>
        </div>
        <div class="card-body">
            <form action="/notes/new-note" method="POST">
                <div class="mt-2">
                    <input type="text" name="title" class="form-control" placeholder="Title" autofocus>
                </div>
                <div class="mt-2">
                    <textarea type="text" name="description" class="form-control" placeholder="Description" autofocus></textarea>
                </div>
                <div class="mt-2">
                    <button class="btn btn-primary btn-block">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>
