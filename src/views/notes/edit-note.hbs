<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>Edit Note</h3>
        </div>
        <div class="card-body">
            <form action="/notes/edit/{{note._id}}?_method=PUT" method="POST">
                <input type="hidden" name="_method" value="PUT">
                <div class="mt-2">
                    <input type="text" name="title" class="form-control" placeholder="Title" value="{{note.title}}">
                </div>
                <div class="mt-2">
                    <textarea type="text" name="description" class="form-control" placeholder="Description">{{note.description}}</textarea>
                </div>
                <div class="mt-2">
                    <button type="submit" class="btn btn-primary btn-block">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>