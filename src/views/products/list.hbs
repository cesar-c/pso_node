<div class="col-md-12 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>Lista de productos</h3>
        </div>
        <div class="card-body cont-table">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Nombre</th>
                        <th scope="col">imagen</th>
                        <th scope="col">Unidad</th>
                        <th scope="col">Descripci√≥n</th>
                        <th scope="col">Acciones</th>
                    </tr>
                </thead>
                <tbody id="table-tbody">
                    {{#each products}}
                        <tr>
                            <td>{{name}}</td>
                            <td><img class="table-img" src="/img/products/{{img}}"></td>
                            <td>{{u_name}} - {{u_symbol}}</td>
                            <td>{{description}}</td>
                            <td>
                                <a href="/products/edit/{{id}}" class="btn btn-warning"><i class="fa fa-pencil"></i></a>
                                <a href="/products/delete/{{id}}" class="btn btn-danger"><i class="fa fa-trash" ></i></a>
                            </td>
                        </tr>
                    {{/each}}
                </tbody>
            </table>
            <nav class="mt-2" >
                <ul class="pagination ">
                    {{#each (paginate nPages)}}
                        <li class="page-item"><a class="page-link" href="/products?page={{this}}" onclick="paginate(event)">{{this}}</a></li>
                    {{/each}}
                </ul>
            </nav>
        </div>
    </div>
</div>
<script src="/js/paginate_table.js"></script>